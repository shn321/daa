import itertools

distance = [
    [0, 16, 11, 6],
    [8, 0, 13, 16],
    [4, 7, 0, 9],
    [5, 12, 2, 0]
]

n = len(distance)
min_cost = 9999
best = None

for p in itertools.permutations(range(n)):
    cost = 0
    for i in range(n - 1):
        cost += distance[p[i]][p[i + 1]]
    cost += distance[p[-1]][p[0]]  # return to starting city

    if cost < min_cost:
        min_cost = cost
        best = p

print("Optimal Path:", list(best) + [best[0]])
print("Minimum Cost:", min_cost)
